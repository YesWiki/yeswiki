{{ include_javascript('tools/templates/libs/vendor/datatables/dataTables.bootstrap.min.js') }}
{{ include_javascript('tools/templates/libs/vendor/datatables/jquery.dataTables.min.js') }}
{{ include_css('tools/templates/libs/vendor/datatables/dataTables.bootstrap.min.css') }}

<h2>{{ _t('REACTION_ADMINISTER_REACTIONS') }}</h2>
{% for key, reaction in reactions %}
<h3>{{key}}</h3>
<div class="table-responsive">
  <table id="admin-reactions-table" class="bazar-table table table-condensed table-striped">
    <thead>
      <tr>
        <th>{{ _t('REACTION_USER') }}</th>
        <th>{{ _t('REACTION_VOTE') }}</th>
        <th>{{ _t('REACTION_DATE') }}</th>
        <th>
          <a href="#"
            class="btn btn-danger btn-xs"
            title="{{  _t('REACTION_DELETE_ALL') }}" 
            onclick="javascript:return confirm('{{ _t('REACTION_CONFIRM_DELETE_ALL') }}');">
            <i class="fa fa-trash"></i> {{  _t('REACTION_DELETE_ALL') }}
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for key, react in reaction %}
          <tr>
            <td>{{ react.user }}</td>
            <td>{{ react.id }}</td>
            <td>{{ react.date }}</td>
            <td>
              <a href="#"
                class="btn btn-danger btn-xs"
                title="{{  _t('REACTION_DELETE') }}" 
                onclick="javascript:return confirm('{{ _t('REACTION_CONFIRM_DELETE') }}');">
                <i class="fa fa-trash"></i>
              </a>
            </td>
          </tr>
      {% endfor %}
    </tbody>
  </table>
</div> <!-- /.table-responsive -->
<hr />
 {% endfor %}