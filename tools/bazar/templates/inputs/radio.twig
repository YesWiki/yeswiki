{% extends "@bazar/layouts/input.twig" %}

{% block input %}
    <div class="bazar-radio{{ field.required ? ' radio_required' : ''}}">
        {% for key, option in options %}
        <div class="radio">
            <label for="{{ field.propertyName ~ key }}">
                <input type="radio" id="{{ field.propertyName ~ key }}" value="{{ key }}" name="{{ field.propertyName }}" {% if value == key %}checked{% endif %} />
                <span>{{ option|raw }}</span>
            </label>
        </div>
        {% endfor %}
    </div>
{% endblock %}
