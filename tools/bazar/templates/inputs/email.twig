{% extends "@bazar/layouts/input.twig" %}

{% block input %}
    <div class="input-group">
        <input
            type="email"
            value="{{ value }}"
            id="{{ field.name }}"
            name="{{ field.name }}"
            class="form-control"
            maxlength="{{ field.maxChars }}"
            size="{{ field.maxChars }}"
            placeholder="{{ field.label|raw('html')|striptags }}"
            {% if field.required %}required{% endif %}
        />
    </div>
{% endblock %}
