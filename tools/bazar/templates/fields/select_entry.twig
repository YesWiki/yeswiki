{% extends "@bazar/layouts/field.twig" %}

{% block value_container %}
	<span class="BAZ_texte">
		<a href="{{ entryUrl|e ~ (field.isDistantJson ? '/iframe') }}"
			{{ not isIframe ? 'class="modalbox" data-size="modal-lg"' : '' }}
			{{ field.isDistantJson and not isIframe ? 'data-iframe="1"' }}
			title="{{ _t('BAZ_SEE_ENTRY') }} {{ label|striptags }}">
				{{- label|raw -}}
		</a>
	</span>
{% endblock %}
